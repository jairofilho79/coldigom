# Database - Development
POSTGRES_USER=praise_user
POSTGRES_PASSWORD=praise_password
POSTGRES_DB=praise_db
POSTGRES_PORT=5432

# Backend API - Development
API_PORT=8000

# Frontend - Development
FRONTEND_PORT=3000
FRONTEND_API_BASE_URL=

# Deployment Configuration - Development
DEPLOYMENT_ENV=dev
DEPLOYMENT_HOST=

# Storage Configuration - Development (local storage)
STORAGE_MODE=local
STORAGE_LOCAL_PATH="/Volumes/SSD 2TB SD/storage/assets"

# Wasabi Storage (desabilitado em desenvolvimento)
# WASABI_ACCESS_KEY=
# WASABI_SECRET_KEY=
# WASABI_ENDPOINT=https://s3.wasabisys.com
# WASABI_BUCKET=
# WASABI_REGION=us-east-1

# JWT - Development (usar secret diferente em produção!)
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Development (permissivo para desenvolvimento local)
# Usa "*" para permitir acesso de qualquer origem em desenvolvimento
# O backend trata isso automaticamente desabilitando credentials quando usar "*"
# Isso permite acesso de outros dispositivos na rede local sem precisar
# configurar IPs específicos que podem mudar
# Flutter web usa porta fixa 64753 (configurado via --web-port)
CORS_ORIGINS=*

# Nginx
NGINX_PORT=8080
