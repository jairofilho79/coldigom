# Database - Production
POSTGRES_USER=praise_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
POSTGRES_DB=praise_db
POSTGRES_PORT=5432

# Backend API - Production
API_PORT=8000

# Frontend - Production
FRONTEND_PORT=3000
FRONTEND_API_BASE_URL=

# Deployment Configuration - Production
DEPLOYMENT_ENV=prod
DEPLOYMENT_HOST=  # Configure com o domínio de produção (ex: api.exemplo.com)

# Storage Configuration - Production
STORAGE_MODE=local  # Mudar para 'wasabi' quando disponível
STORAGE_LOCAL_PATH=/storage/assets

# Wasabi Storage (habilitar quando disponível)
# WASABI_ACCESS_KEY=
# WASABI_SECRET_KEY=
# WASABI_ENDPOINT=https://s3.wasabisys.com
# WASABI_BUCKET=
# WASABI_REGION=us-east-1

# JWT - Production (OBRIGATÓRIO: usar secret forte e único!)
JWT_SECRET_KEY=CHANGE_THIS_TO_STRONG_SECRET_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Production (RESTRITIVO: apenas domínios específicos)
# IMPORTANTE: Configure com os domínios reais de produção
CORS_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com

# Nginx
NGINX_PORT=8080
